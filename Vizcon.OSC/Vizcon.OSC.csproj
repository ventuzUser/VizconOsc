<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<OutputType>Library</OutputType>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>Vizcon.OSC</PackageId>
		<Version>1.0.1</Version>
		<Authors>ventuzUser</Authors>
		<Description>A modernized fork of SharpOSC, upgraded to .NET 8.</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/ventuzUser/Vizcon.OSC</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>OSC, OpenSoundControl, .NET8, SharpOSC</PackageTags>
		<PackageProjectUrl>https://github.com/ventuzUser/Vizcon.OSC</PackageProjectUrl>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeSource>true</IncludeSource>
	</PropertyGroup>

</Project>
